---
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import Home from "@/components/Home.astro";
import Movies from "@/components/Movies.vue";
---

<Layout title="Home">
  <main class="w-full flex flex-col max-w-300 mx-auto mt-16 px-4 xl:px-0">
    <Home />
    <Movies client:visible />
    <Footer />
  </main>
  <div
    class="absolute inset-0 -z-10 w-full bg-[linear-gradient(to_right,#11111111_1px,transparent_1px),linear-gradient(to_bottom,#11111111_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#44444444_1px,transparent_1px),linear-gradient(to_bottom,#44444444_1px,transparent_1px)] bg-[size:14px_24px]"
  >
    <div
    class="absolute bottom-0 left-0 w-full h-50 -z-10
      bg-gradient-to-t from-white via-white/50 to-transparent
      dark:from-zinc-900 dark:via-zinc-900/50 dark:to-transparent"
  ></div>
  </div>
</Layout>
